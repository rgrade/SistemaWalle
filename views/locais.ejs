      <div class="modal-body">
          <form action="/locais/salvar" method="post">
            <div class="container justify-content-center mt-5">
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Nome do Local</label>
                <input type="text" name="identificador" class="form-control" id="exampleFormControlInput1">
              </div>
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Endereço</label>
                <input type="text" name="endereco" class="form-control" id="exampleFormControlInput1">
              </div>
              <div class="mb-3">
                <input type="submit" class="w-100 btn btn-lg btn-success" value="Salvar" />
              </div>
            </div>
            </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
